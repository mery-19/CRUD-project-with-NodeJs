<div class="container">
    <div class="signin">
        <div class="row justify-content-center align-items-center">
            <div class="col-12 col-md-6">
                <img class="imgsignin img-fluid" src="/assets/images/img-01.png" alt="user image">
            </div>
            <div class="col-12 col-md-6">
                        <p class="text-danger">{{error}}</p>

                <h4 class="text-muted font-weight-bold text-center m-3 mb-4">Log in to your account</h4>
                <form method="POST" method="/signup">
                    <div class="form-group">
                        <p class="text-danger">{{user.errEmail}}</p>
                        <input type="email" class="form-control" name="email" placeholder="Email" value="{{user.email}}">
                    </div>
                    <div class="form-group">
                         <p class="text-danger">{{user.errPassword}}</p>
                        <input type="password" class="form-control" name="password" placeholder="Password" value="{{user.password}}">
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn submit" name="submit" value="Submit">
                    </div>

                    <div class="form-group d-flex justify-content-center">
                        <a href="/signin" class="text-muted">Create account</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>